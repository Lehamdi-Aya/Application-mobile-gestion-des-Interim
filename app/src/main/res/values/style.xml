<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Text Styles -->

    <!-- Regular Text Styles -->
    <style name="AppTextRegular">
        <item name="android:textSize">@dimen/_13pxh</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="AppTextRegularIndigo">
        <item name="android:textSize">@dimen/_13pxh</item>
        <item name="android:textColor">@color/indigo_main</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="AppOfferTextRegular">
        <item name="android:textSize">@dimen/_13pxh</item>
        <item name="android:textColor">#626262</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <!-- SemiBold Text Styles -->
    <style name="AppTextSemiBold">
        <item name="android:textSize">@dimen/_18pxh</item>
        <item name="android:textColor">@color/indigo_main</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <style name="AppTextSemiBoldBlack">
        <item name="android:textSize">@dimen/_18pxh</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <!-- Welcome Text Style -->
    <style name="AppWelcomeStyle">
        <item name="android:textSize">@dimen/_18pxh</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <!-- WhoAreYou Text Style -->
    <style name="WhoAreYouStyle">
        <item name="android:textSize">@dimen/_32pxh</item>
        <item name="android:textColor">@color/black_900</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <!-- Button Styles -->

    <!-- Indigo Rounded Buttons -->
    <style name="AppButtonIndigoRounded">
        <item name="android:textSize">@dimen/_18pxh</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <style name="AppButtonIndigoApplyRounded">
        <item name="android:textSize">@dimen/_18pxh</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <!-- Reset Button -->
    <style name="AppButtonReset">
        <item name="android:textSize">@dimen/_18pxh</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <!-- Component Styles -->

    <!-- ModalBottomSheetDialog Style -->
    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/gray_app</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <!-- ShapeAppearance Style -->
    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- OfferListItem Styles -->

    <style name="OfferListItemStyleHeader">
        <item name="android:textSize">@dimen/_18pxh</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonLogin" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/yellow</item>
    </style>

    <style name="ButtonSignUp" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/yellow</item>
    </style>
    <style name="ButtonRegister" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorButtonNormal">@color/yellow</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>
    <style name="CardView" parent="@style/Base.CardView" />
    <style name="CardView.Dark" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>
    <style name="CardView.Light" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>
    <style name="HeadTitle">
        <item name="android:textSize">50.0dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="RegistrationPage">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>



</resources>