<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Paradiso"
    android:layout_height="match_parent"
    android:id="@+id/second_register_fragment"
    tools:context=".InscriptionUtilisateur">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/logInTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:layout_marginStart="60dp"
                android:text="Inscription"
                android:textColor="@color/Paradiso"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Nom"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/bleu">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/bleu"
                    android:drawablePadding="20dp"
                    android:padding="15dp"
                    android:inputType="text"
                    android:drawableStart="@drawable/baseline_co_present_24"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Prénom"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/bleu">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/prenomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/bleu"
                    android:drawablePadding="20dp"
                    android:padding="15dp"
                    android:inputType="text"
                    android:drawableStart="@drawable/baseline_co_present_24"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Date de Naissance"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/bleu">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/datDeNaissanceEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/bleu"
                    android:drawablePadding="20dp"
                    android:padding="15dp"
                    android:inputType="text"
                    android:drawableStart="@drawable/date"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Numéro de Téléphone"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/bleu">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/bleu"
                    android:drawablePadding="20dp"
                    android:padding="15dp"
                    android:inputType="text"
                    android:drawableStart="@drawable/cell_phone"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Pays"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/bleu">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/paysEdtiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/bleu"
                    android:drawablePadding="20dp"
                    android:padding="15dp"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/baseline_mail_24"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                    android:hint="Adresse mail"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/bleu">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/villeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/bleu"
                    android:drawablePadding="20dp"
                    android:padding="15dp"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/baseline_mail_24"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Mot de passe "
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/bleu">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/bleu"
                    android:drawablePadding="20dp"
                    android:padding="15dp"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/lock"
                    android:drawableLeft="@drawable/lock"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Confirmer mot de passe "
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/bleu">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cnfmdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/bleu"
                    android:drawablePadding="20dp"
                    android:padding="15dp"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/lock"
                    android:drawableLeft="@drawable/lock"
                    />

            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/buttonEnvoyer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/Paradiso"
                android:text="Envoyé"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                android:textAllCaps="true">

            </Button>

        </LinearLayout>


    </ScrollView>
</FrameLayout>
